{
  "name": "hchat",
  "version": "1.0.1",
  "description": "A simple command-line WhatsApp client with end-to-end RSA encryption, built on whatsapp-web.js.",
  "main": "src/main.ts",
  "bin": "./dist/index.js",
  "scripts": {
    "test": "jest --watch",
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\""
  },
  "keywords": [
    "whatsapp",
    "cli",
    "encryption",
    "rsa",
    "whatsapp-web.js",
    "secure messaging",
    "terminal",
    "chat"
  ],
  "author": "Daniele Martinelli",
  "license": "Unlicense",
  "homepage": "https://github.com/dani69654/hchat",
  "repository": {
    "type": "git",
    "url": "https://github.com/dani69654/hchat.git"
  },
  "dependencies": {
    "inquirer": "^12.7.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.31.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/qrcode-terminal": "^0.12.2",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
